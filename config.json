{
    "name": "Snips.AI Base (no local audio)",
    "version": "0.1.50",
    "slug": "snips-base",
    "description": "Local voice control platform",
    "apparmor": true,
    "arch": ["amd64"],
    "audio": false,
    "boot": "auto",
    "docker_api": false,
    "full_access": false,
    "homeassistant": "0.96.4",
    "homeassistant_api": true,
    "image": "franc6/image-{arch}-snips-base-hassio-addon",
    "ingress": true,
    "host_network": false,
    "map": ["config:rw", "share:rw", "ssl"],
    "panel_icon": "mdi:text-to-speech",
    "ports": {
        "1883/tcp": 9883
    },
    "ports_description": {
        "1883/tcp": "External port for MQTT server.  This is the port you configure in your satellites' snips.toml files."
    },
    "services": ["mqtt:need"],
    "startup": "application",
    "tmpfs": "size=10m",
    "url": "https://github.com/franc6/snips-hassio-addon",
    "options": {
        "analytics": "false",
        "assistant": "assistant.zip",
        "cafile": "certfile.pem",
        "country_code": "US",
        "custom_tts": {
            "active": true,
            "platform": "mimic",
            "voice": "/share/snips/voices/cmu_us_eey.flitevox"
        },
        "google_asr_credentials": "",
        "language": "en",
        "snips_watch": "false"
    },
    "schema": {
        "analytics": "bool",
        "assistant": "str",
        "cafile": "str",
        "country_code": "str",
        "custom_tts": {
            "active": "bool",
            "platform": "match(mimic|pico2wave)",
            "voice": "str"
        },
        "google_asr_credentials": "str",
        "language": "match(en|de|fr)",
        "snips_watch": "bool"
    }
}
